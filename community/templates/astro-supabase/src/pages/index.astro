---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Astro + Supabase + Tambo">
	<main class="min-h-screen bg-background text-foreground relative overflow-hidden">
		<!-- Subtle background gradient -->
		<div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] pointer-events-none"></div>
		
		<div class="relative z-10 py-24 px-6 max-w-6xl mx-auto">
			<div class="text-center">
				<!-- Badge -->
				<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-secondary text-secondary-foreground border border-border text-sm font-medium mb-8 animate-[fadeInDown_0.6s_ease-out]">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
					</svg>
					<span>Powered by Tambo AI</span>
				</div>
				
				<!-- Hero Title -->
				<h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-8 leading-[1.1] animate-[fadeInUp_0.6s_ease-out_0.1s_both]">
					Build AI-Powered Apps with <br/>
					<span class="text-primary">Astro</span> & <span class="text-primary">Supabase</span>
				</h1>
				
				<!-- Subtitle -->
				<p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto mb-12 leading-relaxed animate-[fadeInUp_0.6s_ease-out_0.2s_both]">
					A modern starter template combining Astro's speed, Supabase's backend, and Tambo's generative UI for creating intelligent applications.
				</p>

				<!-- CTA Buttons -->
				<div class="flex gap-4 justify-center items-center flex-wrap mb-24 animate-[fadeInUp_0.6s_ease-out_0.3s_both]">
					<a href="/register" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium text-base hover:bg-primary/90 transition-colors shadow-sm">
						Get Started
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
						</svg>
					</a>
					<a href="/signin" class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-secondary-foreground border border-input rounded-lg font-medium text-base hover:bg-secondary/80 transition-colors">
						Sign In
					</a>
				</div>

				<!-- Features Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-16 animate-[fadeInUp_0.6s_ease-out_0.4s_both]">
					<!-- Feature 1: AI-Powered UI -->
					<div class="group p-6 rounded-xl border border-border bg-card text-card-foreground hover:shadow-md transition-all duration-300">
						<div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold mb-2">AI-Powered UI</h3>
						<p class="text-muted-foreground text-sm leading-relaxed">Generate dynamic interfaces with Tambo's generative components</p>
					</div>

					<!-- Feature 2: Supabase Backend -->
					<div class="group p-6 rounded-xl border border-border bg-card text-card-foreground hover:shadow-md transition-all duration-300">
						<div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold mb-2">Supabase Backend</h3>
						<p class="text-muted-foreground text-sm leading-relaxed">Secure authentication and real-time database out of the box</p>
					</div>

					<!-- Feature 3: Lightning Fast -->
					<div class="group p-6 rounded-xl border border-border bg-card text-card-foreground hover:shadow-md transition-all duration-300">
						<div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold mb-2">Lightning Fast</h3>
						<p class="text-muted-foreground text-sm leading-relaxed">Built with Astro for optimal performance and SEO</p>
					</div>

					<!-- Feature 4: Data Visualization -->
					<div class="group p-6 rounded-xl border border-border bg-card text-card-foreground hover:shadow-md transition-all duration-300">
						<div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold mb-2">Data Visualization</h3>
						<p class="text-muted-foreground text-sm leading-relaxed">Interactive charts and tables powered by Recharts</p>
					</div>
				</div>
			</div>

			<!-- Tech Stack -->
			<div class="text-center mt-24 pb-8 animate-[fadeInUp_0.6s_ease-out_0.5s_both]">
				<p class="text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-6">Built with modern stack</p>
				<div class="flex gap-3 justify-center flex-wrap">
					<span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-md text-sm font-medium border border-border">Astro</span>
					<span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-md text-sm font-medium border border-border">Supabase</span>
					<span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-md text-sm font-medium border border-border">Tambo AI</span>
					<span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-md text-sm font-medium border border-border">React</span>
					<span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-md text-sm font-medium border border-border">TypeScript</span>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
