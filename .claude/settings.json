{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-config-file.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-config-file.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-lint.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/auto-format.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/type-check.sh",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-lint.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/auto-format.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/type-check.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
