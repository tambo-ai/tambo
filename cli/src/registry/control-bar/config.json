{
  "name": "control-bar",
  "description": "Compound API for a dialog-based control bar: Root, Trigger, Content",
  "componentName": "ControlBar",
  "dependencies": ["@tambo-ai/react", "radix-ui", "class-variance-authority"],
  "devDependencies": [],
  "requires": [
    "thread-content",
    "message-input",
    "message",
    "scrollable-message-container"
  ],
  "files": [
    {
      "name": "control-bar.tsx",
      "content": "src/registry/control-bar/control-bar.tsx"
    }
  ],
  "props": {
    "Root": { "hotkey": { "type": "string", "default": "mod+k" } },
    "Trigger": { "asChild": { "type": "boolean", "default": true } },
    "Content": { "contextKey": { "type": "string" } }
  },
  "usage": {
    "default": "<ControlBarRoot hotkey=\"mod+k\"><ControlBarTrigger asChild><Button>Open</Button></ControlBarTrigger><ControlBarContent contextKey=\"chat\"/></ControlBarRoot>"
  }
}
