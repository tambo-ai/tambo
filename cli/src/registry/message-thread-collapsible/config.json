{
  "name": "message-thread-collapsible",
  "description": "Compound components to build a collapsible chat panel: Root, Trigger, Content. Provide your own Button as Trigger. Supports fixed positioning, size and surface variants.",
  "componentName": "MessageThreadCollapsible",
  "dependencies": [
    "@tambo-ai/react",
    "radix-ui",
    "lucide-react",
    "class-variance-authority"
  ],
  "devDependencies": [],
  "requires": [
    "thread-content",
    "message-input",
    "message-suggestions",
    "message",
    "thread-dropdown",
    "scrollable-message-container"
  ],
  "files": [
    {
      "name": "message-thread-collapsible.tsx",
      "content": "src/registry/message-thread-collapsible/message-thread-collapsible.tsx"
    }
  ],
  "props": {
    "Root": {
      "isFixed": { "type": "boolean", "default": true },
      "position": { "type": "enum", "values": ["bottom-right","bottom-left","top-right","top-left"], "default": "bottom-right" },
      "offset": { "type": "number", "default": 16 },
      "size": { "type": "enum", "values": ["sm","md","lg"], "default": "md" },
      "appearance": { "type": "enum", "values": ["default","elevated","bordered"], "default": "default" }
    },
    "Trigger": {
      "asChild": { "type": "boolean", "default": true, "description": "Render your Button as the trigger" }
    },
    "Content": {}
  },
  "usage": {
    "fixed": "<Collapsible.Root isFixed position=\"bottom-left\"><Collapsible.Trigger asChild><Button variant=\"floating\" size=\"icon\" aria-label=\"Open chat\" /></Collapsible.Trigger><Collapsible.Content>…</Collapsible.Content></Collapsible.Root>",
    "embedded": "<div className=\"col-span-3\"><Collapsible.Root isFixed={false} size=\"lg\" appearance=\"bordered\"><Collapsible.Trigger asChild><Button>Open Chat</Button></Collapsible.Trigger><Collapsible.Content>…</Collapsible.Content></Collapsible.Root></div>"
  }
}
