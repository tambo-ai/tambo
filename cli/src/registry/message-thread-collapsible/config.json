{
  "name": "message-thread-collapsible",
  "description": "Displays message threads that can be expanded or collapsed. Requires a custom trigger button for closed state. Supports fixed positioning, size and surface variants.",
  "componentName": "MessageThreadCollapsible",
  "dependencies": [
    "@tambo-ai/react",
    "radix-ui",
    "lucide-react",
    "class-variance-authority"
  ],
  "devDependencies": [],
  "requires": [
    "thread-content",
    "message-input",
    "message-suggestions",
    "message",
    "thread-dropdown",
    "scrollable-message-container"
  ],
  "files": [
    {
      "name": "message-thread-collapsible.tsx",
      "content": "src/registry/message-thread-collapsible/message-thread-collapsible.tsx"
    }
  ],
  "props": {
    "contextKey": { "type": "string", "description": "Thread context key" },
    "defaultOpen": { "type": "boolean", "default": false },
    "isFixed": { "type": "boolean", "default": true, "description": "Use fixed positioning" },
    "position": { "type": "enum", "values": ["bottom-right","bottom-left","top-right","top-left"], "default": "bottom-right" },
    "offset": { "type": "number", "default": 16 },
    "size": { "type": "enum", "values": ["sm","md","lg"], "default": "md" },
    "appearance": { "type": "enum", "values": ["default","elevated","bordered"], "default": "default" },
    "trigger": { "type": "ReactNode", "required": true, "description": "Custom trigger button (use <Button>)" }
  },
  "usage": {
    "fixed": "<MessageThreadCollapsible contextKey=\"chat\" isFixed position=\"bottom-left\" size=\"sm\" appearance=\"elevated\" trigger={<Button variant=\"floating\" size=\"icon\"><Icon/></Button>} />",
    "embedded": "<div className=\"col-span-3\"><MessageThreadCollapsible contextKey=\"chat\" isFixed={false} size=\"lg\" appearance=\"bordered\" trigger={<Button>Open Chat</Button>} /></div>"
  }
}
