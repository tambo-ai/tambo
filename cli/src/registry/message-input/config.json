{
  "name": "message-input",
  "description": "Compound parts for composing messages: MessageInput, Textarea, Toolbar, SubmitButton, FileButton, Error, StagedImages",
  "componentName": "MessageInput",
  "dependencies": [
    "class-variance-authority",
    "@tambo-ai/react",
    "lucide-react",
    "radix-ui",
    "react-dom",
    "framer-motion",
    "streamdown"
  ],
  "devDependencies": [],
  "requires": [],
  "files": [
    {
      "name": "message-input.tsx",
      "content": "src/registry/message-input/message-input.tsx"
    },
    {
      "name": "mcp-config-modal.tsx",
      "content": "src/registry/message-input/mcp-config-modal.tsx"
    },
    {
      "name": "suggestions-tooltip.tsx",
      "content": "src/registry/message-suggestions/suggestions-tooltip.tsx"
    }
  ],
  "props": {
    "MessageInput": { "contextKey": { "type": "string" } },
    "MessageInputTextarea": { "placeholder": { "type": "string", "default": "What do you want to do?" } },
    "MessageInputToolbar": {},
    "MessageInputSubmitButton": {},
    "MessageInputFileButton": { "accept": { "type": "string", "default": "image/*" } },
    "MessageInputError": {},
    "MessageInputStagedImages": {}
  },
  "usage": {
    "basic": "<MessageInput contextKey=\"chat\"><MessageInputTextarea /><MessageInputToolbar><MessageInputSubmitButton /></MessageInputToolbar><MessageInputError /></MessageInput>",
    "withFiles": "<MessageInput><MessageInputTextarea /><MessageInputToolbar><MessageInputFileButton /><MessageInputSubmitButton /></MessageInputToolbar></MessageInput>"
  }
}
