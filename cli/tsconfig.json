{
  "extends": "@tambo-ai/typescript-config/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@tambo-ai/react": ["../react-sdk/src"],
      "@tambo-ai/react/mcp": ["../react-sdk/src/mcp"]
    }
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.tsx",
    "src/types/*.d.ts"
  ],
  "exclude": ["node_modules", "./dist"]
}
